<div>
  <% if @name %>
  Welcome player <%= @name %>
  <a href="/battleship">Play the game</a>
    <% else %>
  <form action="/player" method='post'>
    Please enter a name:
    <input type="text" name="name">
    <input type="submit" value="submit">
  </form>
  <% end %>
</div>

<% if @message %>
	<h1><%= @message %></h1>
<% end %>